    <script>
        const ctx = document.getElementById('salesChart').getContext('2d');
        let salesChart;
    
        // Function to fetch and render data
        async function fetchAndRenderChart(filter, startDate = null, endDate = null) {
            try {
                let url = `/admin/sales-data?filter=${filter}`;
                if (filter === 'custom' && startDate && endDate) {
                    url += `&startDate=${startDate}&endDate=${endDate}`;
                }
    
                const response = await fetch(url);
                const data = await response.json();
    
                if (salesChart) {
                    salesChart.destroy(); // Clear previous chart
                }
    
                salesChart = new Chart(ctx, {
                    type: 'bar', // Bar chart
                    data: {
                        labels: data.salesData.map(item => item._id), // Dates
                        datasets: [{
                            label: 'Total Sales',
                            data: data.salesData.map(item => item.totalSales), // Sales amounts
                            backgroundColor: data.salesData.map(() => 'rgba(54, 162, 235, 0.7)'), // Bar colors
                            borderColor: data.salesData.map(() => 'rgba(54, 162, 235, 1)'), // Bar borders
                            borderWidth: 1,
                            borderRadius: 5, // Rounded bar corners
                            hoverBackgroundColor: 'rgba(54, 162, 235, 1)',
                            hoverBorderColor: '#000'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false, // Disable aspect ratio to allow full height
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top',
                                labels: {
                                    font: {
                                        size: 14,
                                        weight: 'bold'
                                    }
                                }
                            },
                            tooltip: {
                                enabled: true,
                                backgroundColor: '#333',
                                titleColor: '#fff',
                                bodyColor: '#fff',
                                cornerRadius: 5,
                                padding: 10
                            }
                        },
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Date',
                                    color: '#333',
                                    font: {
                                        size: 14,
                                        weight: 'bold'
                                    }
                                },
                                ticks: {
                                    color: '#666'
                                },
                                grid: {
                                    display: false // No vertical gridlines for cleaner look
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'Sales Amount',
                                    color: '#333',
                                    font: {
                                        size: 14,
                                        weight: 'bold'
                                    }
                                },
                                ticks: {
                                    color: '#666',
                                    callback: value => `₹${value}` // Add currency format
                                },
                                grid: {
                                    color: 'rgba(200, 200, 200, 0.1)'
                                }
                            }
                        }
                    }
                });
            } catch (error) {
                console.error('Error fetching sales data:', error);
            }
        }
    
        // Event Listeners for Filters
        document.getElementById('filter').addEventListener('change', (e) => {
            const filter = e.target.value;
            const customRange = document.getElementById('custom-range');
    
            if (filter === 'custom') {
                customRange.style.display = 'block';
            } else {
                customRange.style.display = 'none';
                fetchAndRenderChart(filter);
            }
        });
    
        document.getElementById('apply-custom-filter').addEventListener('click', () => {
            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;
    
            if (startDate && endDate) {
                fetchAndRenderChart('custom', startDate, endDate);
            } else {
                alert('Please select both start and end dates.');
            }
        });
    
        // Initial Load: Render Yearly Data
        fetchAndRenderChart('yearly');
    </script>

    <script>
 $(document).ready(function () {
    // Generic function to fetch and render data for a Chart.js chart
    function fetchBestSellingChartData(type, canvasSelector) {
        $.ajax({
            url: `/admin/home/best-selling?type=${type}`,
            method: 'GET',
            success: function (response) {
                if (response.success) {
                    const labels = response.data.map(item => item.name);
                    const quantities = response.data.map(item => item.totalQuantity);

                    renderChart(canvasSelector, labels, quantities, `Top 10 ${type}`);
                } else {
                    console.error(`Error: ${response.message}`);
                    $(canvasSelector).replaceWith('<p>Error loading chart data.</p>');
                }
            },
            error: function (error) {
                console.error(`Error fetching best-selling ${type}`, error);
                $(canvasSelector).replaceWith('<p>Error loading chart data.</p>');
            }
        });
    }

    // Function to render a Chart.js chart
    function renderChart(canvasSelector, labels, data, title) {
        const ctx = $(canvasSelector)[0].getContext('2d');
        new Chart(ctx, {
            type: 'bar', // Change to 'pie' or 'doughnut' if needed
            data: {
                labels: labels,
                datasets: [{
                    label: title,
                    data: data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                    ],
                    borderWidth: 1,
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                    },
                    title: {
                        display: true,
                        text: title,
                    },
                },
                scales: {
                    y: {
                        beginAtZero: true,
                    }
                },
            }
        });
    }

    // Initialize charts for products, categories, and brands
    fetchBestSellingChartData('products', '#best-selling-products-chart');
    fetchBestSellingChartData('categories', '#best-selling-categories-chart');
    fetchBestSellingChartData('brands', '#best-selling-brands-chart');
});

